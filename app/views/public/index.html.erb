

<div class="container">

	<div class="row">
		<h2 class="center" id="header">Translatr</h2>
	</div>
	<div class="row">
		<div class="col s12 m6">
			<div class="card display-card left-card center">
				<div class="card-content">
					<h6>INPUT TEXT</h6>
					<div class="output_div original-content"></div>
				</div>
			</div>
		</div>
		<div class="col s12 m6">
			<div class="card display-card center right-card">
				<div class="card-content">
					<h6>OUTPUT TEXT</h6>
					<div class="output_div2 translated-content"></div>
				</div>
			</div>
		</div>
		
		<div class="row">
		<br>
			<div class="center">
			</div>
		</div>
		<div class="center">
			<a class="waves-effect waves-light btn translate-btn">Translate</a>
		</div>
	</div>
</div>


<script type="text/javascript">

	function readText(){
		var lines=''
		$.ajax({
			url: '../sample1.txt',
			dataType: 'text',
			success: function(data){
				lines = data.split('\n');
				var s = '';
				for (var i=0;i<lines.length;i+=2){
					s=s+lines[i]+' ';
				}
				$('.output_div').html(s);
			}
		});
	}

	function readTranslated(){
		var lines=''
		$.ajax({
			url: '../sample3.txt',
			dataType: 'text',
			success: function(data){
				lines = data.split('\n');
				var s = '';
				for (var i=0;i<lines.length;i+=2){
					s=s+lines[i]+' ';
				}
				$('.output_div2').html(s);
			}
		});
	}


	$(document).ready(function(){
		
		readText();	
	//	readTranslated();	
		$(".translate-btn").click(function(){
			readText();
			readTranslated();
			
		});
	
	});
</script>
